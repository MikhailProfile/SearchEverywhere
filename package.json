{
	"name": "ads-searcheverywhere",
	"displayName": "Search Everywhere",
	"description": "Search tables, views, stored procedures, functions by name or code.",
    "icon": "png/search.png",
	"publisher": "MikhailT",
	"version": "1.2.1",
	"engines": {
		"vscode": "^1.39.0",
		"azdata": "*"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ads-searcheverywhere.search",
		"onCommand:ads-searcheverywhere.searchAndCacheClear"
	],
	"main": "./out/searchEverywhere.js",
	"contributes": {
		"commands": [
			{
				"command": "ads-searcheverywhere.search",
				"title": "Search Everywhere"
			},
			{
				"command": "ads-searcheverywhere.searchAndCacheClear",
				"title": "Search Everywhere With Cache Clear"
			}
		],
		"configuration": {
		"type": "object",
        "title": "Search Everywhere configuration",
        "properties": {
        	"searchEverywhere.columnsInTable": {
				"type": "boolean",
                "default": false,
                "description": "Add columns information to Tables(could have performance impact)",
				"order" : 0
            	},
			"searchEverywhere.defaultTableAction": {
				"type": "string",
                "default": "objectExplorer.scriptAsSelect",
                "description": "Default action for Table types",
				"order" : 1,
				"enum": [
	              "objectExplorer.scriptAsSelect",
	              "objectExplorer.scriptAsEdit",
	              "objectExplorer.scriptAsCreate",
	              "objectExplorer.scriptAsDelete"
	            ]
            	},
				"searchEverywhere.defaultStoredProcedureAction": {
				"type": "string",
                "default": "objectExplorer.scriptAsAlter",
                "description": "Default action for Strored Procedure types",
				"order" : 2,
				"enum": [
	              "objectExplorer.scriptAsCreate",
	              "objectExplorer.scriptAsDelete",
	              "objectExplorer.scriptAsExecute",
	              "objectExplorer.scriptAsAlter"
	            ]
            	},
				"searchEverywhere.defaultViewAction": {
				"type": "string",
                "default": "objectExplorer.scriptAsSelect",
                "description": "Default action for View types",
				"order" : 3,
				"enum": [
	              "objectExplorer.scriptAsSelect",
	              "objectExplorer.scriptAsCreate",
	              "objectExplorer.scriptAsDelete",
	              "objectExplorer.scriptAsAlter"	              
	            ]
            	},
				"searchEverywhere.defaultUserDefinedFunctionAction": {
				"type": "string",
                "default": "objectExplorer.scriptAsAlter",
                "description": "Default action for UserDefinedFunction types",
				"order" : 4,
				"enum": [
	              "objectExplorer.scriptAsCreate",
	              "objectExplorer.scriptAsDelete",
	              "objectExplorer.scriptAsAlter"
	            ]
            	}
			}
		 },
		 "keybindings": [
            {
                "key": "ctrl+t",
                "command": "ads-searcheverywhere.search"
            },
			{
                "key": "ctrl+alt+t",
                "command": "ads-searcheverywhere.searchAndCacheClear"
            }
		]
	},	
	"repository": {
    "type": "git",
    "url": "https://github.com/MikhailProfile/SearchEverywhere.git"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"proposedapi": "node installTypings.js"
	},
	"devDependencies": {
		"@types/azdata": "*",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.39.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"azdata-test": "^1.x",
		"eslint": "^6.8.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.0",
		"typescript": "^4.3.5"
	},
	"dependencies": {
		"memory-cache": "^0.2.0"
	}
}
